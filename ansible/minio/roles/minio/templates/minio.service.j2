[Unit]
Description=MinIO {{ minio_env }}
After=network.target

[Service]
User=root
Group=root

Environment="MINIO_ROOT_USER={{ cfg.minio_user }}"
Environment="MINIO_ROOT_PASSWORD={{ cfg.minio_password }}"

ExecStart=/usr/local/bin/minio server {{ cfg.minio_data }} \
 --console-address ":{{ cfg.minio_console }}" \
 --address ":{{ cfg.minio_port }}"

Restart=always
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
